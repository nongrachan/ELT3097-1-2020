<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="nhom6.com.duoihinhbatchu.activity.ResultActivity">
    <ImageView
            android:alpha="0.4"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"
            android:src="@mipmap/bg_result"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    <LinearLayout
            android:layout_above="@+id/adView"
            android:id="@+id/linear_top"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:paddingBottom="30dp"
                android:paddingTop="30dp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/red_A700"
                android:textSize="40sp"
                android:text="CHÚC MỪNG"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <TextView
                android:paddingBottom="30dp"
                android:textColor="@color/red_A700"
                android:gravity="center"
                android:textSize="25sp"
                android:text="Bạn đã tìm ra đáp án:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/tv_result"
                android:background="@color/colorAccent"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:padding="15dp"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:textSize="25sp"
                android:text="Hồi Hộp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:paddingTop="30dp"
                android:paddingBottom="30dp"
                android:textColor="@color/red_A700"
                android:gravity="center"
                android:textSize="25sp"
                android:text="Bạn được tặng +5 ruby"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <Button
                android:id="@+id/btn_next"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textColor="@android:color/white"
                android:background="@drawable/custom_button_press_effect"
                android:text="Tiếp tục"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </LinearLayout>
    <com.google.android.gms.ads.AdView
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            ads:adSize="BANNER"
            ads:adUnitId="@string/banner_home_footer"/>
</RelativeLayout>
